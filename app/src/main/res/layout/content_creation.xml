<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/purple"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mo.shareyousport.Creation"
    tools:showIn="@layout/activity_creation">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageView
    android:id="@+id/minus"
        android:layout_width="60dp"
        android:layout_height="60dp"
    android:src="@drawable/minus"
        android:layout_alignTop="@+id/plus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
    android:id="@+id/plus"
        android:layout_width="60dp"
        android:layout_height="60dp"
    android:src="@drawable/plus"
        android:layout_above="@+id/equipement"
        android:layout_toEndOf="@+id/equipement"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:id="@+id/equipement"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/equipement"
        android:layout_above="@+id/send"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:id="@+id/send"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/send"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/plus" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back"
        android:layout_alignTop="@+id/send"
        android:layout_toLeftOf="@+id/minus"
        android:layout_toStartOf="@+id/minus" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Votre lieu de pratique"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/clock"
        android:layout_centerHorizontal="true"
        android:textColorHint="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_alignBottom="@+id/clock"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="L'heure de votre activité"
        android:textColorHint="#ffffff" />

    <ImageView
        android:id="@+id/clock"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/clock"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/editText2" />

    <ImageView
        android:id="@+id/pin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/pin"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_alignBottom="@+id/minus"
        android:layout_toLeftOf="@+id/minus"
        android:layout_alignLeft="@+id/send"
        android:layout_alignStart="@+id/send"
        android:hint="0"
        android:gravity="center"
        android:textColorHint="#ffffff"
        android:textColorLink="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_alignBottom="@+id/equipement"
        android:layout_alignLeft="@+id/plus"
        android:layout_alignStart="@+id/plus"
        android:hint="Equipement nécessaire"
        android:layout_alignRight="@+id/back"
        android:layout_alignEnd="@+id/back"
        android:textColorHint="#ffffff" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_above="@+id/back"
        android:layout_toRightOf="@+id/back"
        android:checked="false"
        android:layout_alignTop="@+id/editText4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/Liste_sport"
        android:layout_above="@+id/pin"
        android:layout_toStartOf="@+id/back"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        tools:listitem="@android:layout/simple_expandable_list_item_1" />



</RelativeLayout>
