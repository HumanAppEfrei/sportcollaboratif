<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/purple"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mo.shareyousport.Interface"
    tools:showIn="@layout/activity_interface">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/event"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/event"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/create"
        android:layout_alignBottom="@+id/friends"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:layout_below="@+id/logo"
        android:layout_toLeftOf="@+id/create" />

    <ImageView
        android:id="@+id/create"
        android:layout_width="136dp"
        android:layout_height="151dp"
        android:src="@drawable/create"
        android:layout_weight="0.22"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/friends"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/friends"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/friends"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true" />

    <ImageView
            android:id="@+id/join"
            android:layout_width="253dp"
            android:layout_height="151dp"
            android:src="@drawable/join"
        android:layout_gravity="center"
        android:layout_marginBottom="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/friends"
        android:layout_toEndOf="@+id/create"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_below="@+id/logo"
        android:layout_toRightOf="@+id/create" />


</RelativeLayout>
