<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/profil_fond"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mo.shareyousport.Profil"
    tools:showIn="@layout/activity_profil">


    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/profil_ajouter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profil_ajouter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/profil_info"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profil_info"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/profil_liste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profil_liste"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/profil_localisation"
        android:layout_alignBottom="@+id/back" />

    <ImageView
        android:id="@+id/profil_localisation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profil_localisation"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/profil_vue"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/profil_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profil_photo"
        android:layout_alignTop="@+id/back"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/profil_vue"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profil_vue"
        android:layout_alignTop="@+id/profil_ajouter"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Paris, FRANCE"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignTop="@+id/profil_localisation"
        android:layout_toEndOf="@+id/profil_localisation"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NOM, PRENOM"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_below="@+id/profil_photo"
        android:layout_toStartOf="@+id/back"
        android:layout_marginTop="20dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_above="@+id/profil_ajouter"
        android:layout_toEndOf="@+id/profil_vue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CRÉÉS"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/ratingBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="9 "
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/textView3"
        android:layout_toStartOf="@+id/profil_localisation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="rejoins"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/profil_photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="23"
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/ratingBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(28 avis)"
        android:id="@+id/textView7"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4/5"
        android:id="@+id/textView8"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignTop="@+id/textView6"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
